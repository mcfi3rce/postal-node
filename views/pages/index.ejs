<!-- views/pages/index.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <% include ../partials/head %>
</head>
<body class="container">

<header>
    <% include ../partials/header %>
</header>

<main>
    <div class="jumbotron">
        <h1>This is great</h1>
        <p>Welcome to templating using EJS</p>
    </div>
    <div>
    <h2>Variable</h2>
    <p><%= tagline %></p>
    </div>
    <div>
        <ul>
            <% drinks.forEach(function(drink) { %>
                <li><%= drink.name %> - <%= drink.gainz %></li>
            <% }); %>
        </ul>    
    </div>
</main>

<footer>
    <% include ../partials/footer %>
</footer>

</body>
</html>